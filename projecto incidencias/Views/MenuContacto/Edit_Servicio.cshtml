            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                <label asp-for="ESTADO" class="ESTADO"></label>

     <select asp-for="ESTADO" class="container">

                    <option value="PROCESO">PROCESO</option>
