
@model projecto_incidencias.Models.Servicio

@{
    ViewData["Title"] = "Create_Servicio";
}




<h4>Servicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Create_Servicio"  >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group" >
                <label asp-for="ESTADO" class="ESTADO"></label>

     <select asp-for="ESTADO" class="container" onchange ="if(this.value=='TERMINADO') {document.getElementById('FECHA_TERMINACION').disabled = false; document.getElementById('CONFIGURACION').disabled = false} else {document.getElementById('FECHA_TERMINACION').disabled = true;  document.getElementById('CONFIGURACION').disabled = true}"  >

                    <option value="TERMINADO">TERMINADO</option>
                    <option value="PENDIENTE">PENDIENTE </option>
                   <option value="PROCESO">PROCESO</option>
                    <option value="RECHAZADO">RECHAZADO</option>
                  
                </select>
            </div>  
        
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control"  type  = "number"    />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
          
          
                           <div class="form-group">
                <label asp-for="NOMBRE_ID" class="NOMBRE_ID"></label>

     <select asp-for="NOMBRE_ID" class="container" name ="NOMBRE_ID" placeholder="Proporcione el nombre de quien hara el servicio">
@foreach (var item in Model.USUARIOS)
{


    <option value="@item.ID"+>@item.NOMBRE</option>
 
}






                    
                   
                </select>
            </div>

                                  <div class="form-group">
                <label asp-for="NOMBRE_TECNICO_ID" class="NOMBRE_TECNICO_ID"></label>

     <select asp-for="NOMBRE_TECNICO_ID" class="container"  name ="NOMBRE_TECNICO_ID"  placeholder="Proporcione el nombre de quien recibira el  servicio">
@foreach (var item in Model.USUARIOS)
{
    <option value="@item.ID">@item.NOMBRE</option>

}
                    
                   
                </select>
            </div>

          
            
     
                            <div class="form-group">
                <label asp-for="AREA" class="AREA"></label>

     <select asp-for="AREA" class="container">

                    <option value="BIOQUIMICA">BIOQUIMICA</option>
                    <option value="UNIDAD ACADEMICA">UNIDAD ACADEMICA </option>
                   <option value="UNIDAD DE POSTGRADO">UNIDAD DE POSTGRADO</option>
                    <option value="SISTEMAS - CENTRO DE COMPUTO">SISTEMAS - CENTRO DE COMPUTO</option>
                    <option value="INDUSTRIAL - EXTRAESCOLARES">INDUSTRIAL - EXTRAESCOLARES </option>
                    <option value="CONTROL ESCOLAR - COORDINACION -BIBLIOTECA">CONTROL ESCOLAR - COORDINACION -BIBLIOTECA</option>
                 <option value="ELECTRICA - ELECTRONICA (ISLA MACHO)">ELECTRICA - ELECTRONICA (ISLA MACHO)</option>
                  <option value="MECATRONICA - LENGUAS EXTRANJERAS">MECATRONICA - LENGUAS EXTRANJERAS</option>
                </select>
            </div>




                              <div class="form-group">
                <label asp-for="AULA_ID " class="AULA_ID "></label>

     <select asp-for="AULA_ID" class="container" name ="AULA_ID">
@foreach (var item in Model.AULAS)
{
    <option value="@item.ID">@item.NOMBRE</option>
}
                    
                   
                </select>
            </div>
        
             <div class="form-group">
                <label asp-for="EQUIPO_ID" class="EQUIPO_ID"></label>

     <select asp-for="EQUIPO_ID" class="container" name ="EQUIPO_ID">
@foreach (var item in Model.Equipo)
{
    <option value="@item.ID">@item.NOMBRE</option>

}
                    
                   
                </select>
            </div>
              <div class="form-group">
                <label asp-for="FECHA" class="control-label"></label>
                <input asp-for="FECHA" class="form-control" type  = "text"  />
                <span asp-validation-for="FECHA" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="DESCRIPCION " class="control-label"></label>
                <input asp-for="DESCRIPCION " class="form-control" type  = "text"  />
                <span asp-validation-for="DESCRIPCION " class="text-danger"></span>
            </div>        
             <h4>ESTOS CAMPOS SOLO ESTARAN DISPONIBLES SI SE SELECCIONO ESTADO TERMNINADO</h4>
                <div class="form-group">
                <label asp-for="FECHA_TERMINACION" class="control-label"></label>
                <input asp-for="FECHA_TERMINACION" class="form-control" type  = "text"   id ="FECHA_TERMINACION" name="FECHA_TERMINACION" />
                <span asp-validation-for="FECHA_TERMINACION " class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="CONFIGURACION" class="control-label"></label>
                <input asp-for="CONFIGURACION" class="form-control" type  = "text"   id ="CONFIGURACION" name="CONFIGURACION"/>
                <span asp-validation-for="CONFIGURACION" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" onclick="aviso()"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>

</div>
<script>
    function soloLetras(e){
       key = e.keyCode || e.which;
       tecla = String.fromCharCode(key).toLowerCase();
       letras = " áéíóúabcdefghijklmnñopqrstuvwxyz";
       especiales = "8-37-39-46";

       tecla_especial = false
       for(var i in especiales){
            if(key == especiales[i]){
                tecla_especial = true;
                break;
            }
        }

        if(letras.indexOf(tecla)==-1 && !tecla_especial){
            return false;
        }
    }
    function aviso() {

       alert(" SI LA CLAVE YA EXISTE ,ENTONCES NO SE CREARA EL CONTACTO!!!")



    }

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
