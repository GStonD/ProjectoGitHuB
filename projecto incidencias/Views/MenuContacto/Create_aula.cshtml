@model projecto_incidencias.Models.Aula

@{
    ViewData["Title"] = "Create_aula";
}

<h4>Crear Aula</h4>


<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create_aula">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control"  type  = "number"/>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NOMBRE" class="control-label"></label>
                <input asp-for="NOMBRE" class="form-control" />
                <span asp-validation-for="NOMBRE" class="text-danger"></span>
            </div>

           <div class="form-group">
                <label asp-for="AREA" class="AREA"></label>

     <select asp-for="AREA" class="container">

                    <option value="BIOQUIMICA">BIOQUIMICA</option>
                    <option value="UNIDAD ACADEMICA">UNIDAD ACADEMICA </option>
                   <option value="UNIDAD DE POSTGRADO">UNIDAD DE POSTGRADO</option>
                    <option value="SISTEMAS - CENTRO DE COMPUTO">SISTEMAS - CENTRO DE COMPUTO</option>
                    <option value="INDUSTRIAL - EXTRAESCOLARES">INDUSTRIAL - EXTRAESCOLARES </option>
                    <option value="CONTROL ESCOLAR - COORDINACION -BIBLIOTECA">CONTROL ESCOLAR - COORDINACION -BIBLIOTECA</option>
                 <option value="ELECTRICA - ELECTRONICA (ISLA MACHO)">ELECTRICA - ELECTRONICA (ISLA MACHO)</option>
                  <option value="MECATRONICA - LENGUAS EXTRANJERAS">MECATRONICA - LENGUAS EXTRANJERAS</option>
                </select>
            </div>
     
            <div class="form-group">
                <label asp-for="DESCRIPCION" class="control-label"></label>
                <input asp-for="DESCRIPCION" class="form-control" placeholder="Proporcion euna descripcion leve del lugar" />
                <span asp-validation-for="DESCRIPCION" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

